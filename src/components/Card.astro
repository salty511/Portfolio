---
const { imgSrc, imgDesc, pageLink } = Astro.props
---

<div class="relative group w-64 h-64">
	<a href={pageLink}>
	<img 
	  src={imgSrc}
	  alt="Description" 
	  class="w-full h-full object-cover rounded-lg"
	/>
	
	<div class="absolute inset-0 bg-black bg-opacity-50 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center rounded-lg">
	  <p class="text-white text-center p-4">
		 {imgDesc}
		 
	  </p>
	</div>
</a>
</div>